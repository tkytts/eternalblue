@page
@model IndexModel
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Home page - EternalBlue";
}


<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page - EternalBlue</title>
    <link href="https://unpkg.com/tailwindcss%40%5E1.0%2Fdist%2Ftailwind.min.css" rel="stylesheet" />
</head>
<body style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;">
    <div style="display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;" class="container">


        <div class="w-full max-w-xs">
            <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">

                <div class="pb-4">
                    <div class="font-bold text-xl mb-2">Welcome to EternalBlue</div>
                    <p class="text-gray-700 text-base">
                        The riddle is to find the correct password
                    </p>
                </div>
                <form method="post">
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="Password">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "hidden" })
                        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="pass" type="text" asp-for="Pass" value="" />
                        @Html.ValidationMessageFor(m => m.Pass, null, new { @class = "text-red-500 text-xs italic" })
                    </div>
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                        Sign In
                    </button>
                    @Html.AntiForgeryToken()
                </form>

            </div>
            <p class="text-center text-gray-500 text-xs">
                &copy;2020 IFS. All rights reserved.
            </p>
        </div>
    </div>


</body>
</html>